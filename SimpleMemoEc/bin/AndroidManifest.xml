<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.simplememo"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/notepad_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActMain"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActMemoView"/>
        <activity android:name=".ActNowMemo"/>
        <activity
            android:name=".ActMemoList"
            android:exported="true"/>
        <activity
            android:name=".ActNowMemoStart"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="NowMemoStart"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".ActShortcutCreateNowMemoStart"
            android:excludeFromRecents="true"
            android:label="@string/now_memo"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ActShortcutCreateMemoList"
            android:excludeFromRecents="true"
            android:label="@string/memo_list"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
